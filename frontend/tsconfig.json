{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./",

    "paths": {
      "@/*": ["src/*"],
      "@App/*": ["src/App/*"],
      "@Entities/*": ["src/Entities/*"],
      "@Pages/*": ["src/Pages/*"],
      "@Shared/*": ["src/Shared/*"],
      "@Hooks/*": ["src/Shared/Hooks/*"],
      "@Widgets/*": ["src/Widgets/*"],
      "@Features/*": ["src/Features/*"],
      "@Styles/*": ["src/Shared/Styles/*"],
      "@imgs/*": ["src/Shared/assets/img/*"],
      "@Icons/*": ["src/Shared/assets/icons/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/App/**/*",
    "src/Entities/**/*",
    "src/Pages/**/*",
    "src/Shared/**/*",
    "src/Shared/Hooks/**/*",
    "src/Widgets/**/*",
    "src/Features/**/*",
    "src/Shared/Styles/**/*",
    "src/Shared/assets/img/**/*",
    "src/Shared/assets/icons/**/*",
    "src/Pages/ui/**/*"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
